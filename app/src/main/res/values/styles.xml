<resources>
    <style name="FormContainer">
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
    </style>

    <style name="redeFormEditTextInput" parent="FormContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="redeFormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/background_caixa_texto</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="redeFormEditText1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColorHint">@color/purple</item>
    </style>

    <style name="redeFormButton" parent="FormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="redeFormButton.Link" parent="redeFormButton">
        <item name="android:textColor">@color/blueEnable</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="redeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="redeButton.White">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/purple</item>
    </style>

    <style name="redeTextViewBase">
        <item name="android:textColor">@color/grayText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="redeTextViewBaseForm" parent="FormContainer">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
    
    <style name="redeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    
    <style name="redeTextViewBaseDialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    
    <style name="redeFormEditTextError">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="redeImageViewPost">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
</resources>
