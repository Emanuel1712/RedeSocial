<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.presentation.RegisterActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_edit_text_name_input"
        style="@style/redeFormEditTextInput"
        app:errorTextAppearance="@style/redeFormEditTextInput"
        app:hintEnabled="false">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/register_edit_text_name"
            style="@style/redeFormEditText1"
            android:hint="@string/name"
            android:textColor="@color/purple"
            android:inputType="textPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_edit_text_name_password_input"
        style="@style/redeFormEditTextInput"
        app:errorTextAppearance="@style/redeFormEditTextInput"
        app:hintEnabled="false">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/register_edit_name_password"
            style="@style/redeFormEditText1"
            android:hint="@string/password"
            android:textColor="@color/purple"
            android:inputType="textPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_edit_text_name_password_confirm_input"
        style="@style/redeFormEditTextInput"
        app:errorTextAppearance="@style/redeFormEditTextInput"
        app:hintEnabled="false">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/register_edit_text_name_password_confirm"
            style="@style/redeFormEditText1"
            android:hint="@string/password_confirm"
            android:textColor="@color/purple"
            android:inputType="textPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.projeto.projetoredesocial.common.component.LoadingButton
        android:id="@+id/register_name_button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_rede="@string/continuee"/>
    
    <View
        android:layout_marginTop="80dp"
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/register_text_view_login"
        style="@style/redeTextViewBase"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="24dp"
        android:text="@string/already_has_account"/>

</LinearLayout>