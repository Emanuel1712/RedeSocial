<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.presentation.RegisterActivity"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/register_text_view_welcome"
        style="@style/redeTextViewBaseForm"
        android:layout_gravity="center"
        android:text="@string/welcome_to_instagram"/>

    <com.projeto.projetoredesocial.common.component.LoadingButton
        android:id="@+id/register_button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_rede="@string/next"/>
    


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/register_text_view_login"
        style="@style/redeTextViewBase"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="24dp"
        android:text="@string/agree_terms_policy"/>

</LinearLayout>